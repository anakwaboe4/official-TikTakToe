{
  "openapi": "3.0.3",
  "info": {
    "title": "TicTacToe API",
    "description": "Front- to back-end API for the TicTacToe web UI.",
    "version": "0.1.0",
    "license": {
      "name": "GNU 3.0",
      "url": "https://www.gnu.org/licenses/gpl-3.0.html"
    }
  },
  "externalDocs": {
    "description": "Github",
    "url": "https://github.com/anakwaboe4/official-TikTakToe"
  },
  "tags": [
    {
      "name": "Games",
      "description": "General game & settings endpoints."
    },
    {
      "name": "Moves",
      "description": "Endpoints regarding creating a new move."
    },
    {
      "name": "GameInfo",
      "description": "Endpoints for getting aditional game information."
    }
  ],
  "paths": {
    "/api/games": {
      "post": {
        "tags": [
          "Games"
        ],
        "summary": "Creates a new game.",
        "description": "Creates a new game with the specified settings from the post body.<br>\nOnly one game can be active at any time, requesting this endpoint again thus deletes all previous game data.",
        "requestBody": {
          "description": "The new game details",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GamePostBody"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/GamePostBody"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/GamePostBody"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns the newly created board",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/GameResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameResponse"
                }
              }
            }
          },
          "400": {
            "description": "Returns an bad request error response. The message in the response will give more info on the bad request.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Returns a not found error response. The message in the response will give more info on what wasn't found.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/games/move": {
      "put": {
        "tags": [
          "Moves"
        ],
        "summary": "Attempts to make a move.",
        "description": "Attempts to make a move with the selected user on the specified square.",
        "requestBody": {
          "description": "The new move details",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlayerMoveRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PlayerMoveRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PlayerMoveRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns the board and next player to move",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/MoveResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MoveResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/MoveResponse"
                }
              }
            }
          },
          "400": {
            "description": "Returns an bad request error response. The message in the response will give more info on the bad request.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Returns a not found error response. The message in the response will give more info on what wasn't found.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/games/aimove": {
      "put": {
        "tags": [
          "Moves"
        ],
        "summary": "Commands the AI to make a move.",
        "description": "The selected AI will attempt to make a move using the selected user.",
        "requestBody": {
          "description": "The new move details",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AiMoveRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AiMoveRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AiMoveRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns the board and next player to move",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/MoveResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MoveResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/MoveResponse"
                }
              }
            }
          },
          "400": {
            "description": "Returns an bad request error response. The message in the response will give more info on the bad request.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Returns a not found error response. The message in the response will give more info on what wasn't found.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    
