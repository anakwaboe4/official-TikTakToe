  "components": {
    "schemas": {
      "GamePostBody": {
        "type": "object",
        "required": [
          "participantsIds"
        ],
        "properties": {
          "participantsIds": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int32"
            }
          },
          "lengthX": {
            "type": "integer",
            "format": "int32",
            "minimum": 1,
            "nullable": true
          },
          "lengthY": {
            "type": "integer",
            "format": "int32",
            "minimum": 1,
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GameResponse": {
        "type": "object",
        "properties": {
          "board": {
            "type": "array",
            "items": {
              "type": "array"
            }
          }
        },
        "additionalProperties": false
      },
      "PlayerMoveRequest": {
        "type": "object",
        "required": [
          "playerId",
          "square"
        ],
        "properties": {
          "playerId": {
            "type": "integer",
            "format": "int32"
          },
          "square": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "AiMoveRequest": {
        "type": "object",
        "required": [
          "playerId"
        ],
        "properties": {
          "playerId": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "MoveResponse": {
        "type": "object",
        "properties": {
          "board": {
            "type": "array",
            "items": {
              "type": "array"
            }
          },
          "nextPlayerToMove": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ScoreResponse": {
        "type": "object",
        "properties": {
          "score": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "CurrentPlayerResponse": {
        "type": "object",
        "properties": {
          "currentPlayerId": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "BoardResponse": {
        "type": "object",
        "properties": {
          "board": {
            "type": "array",
            "items": {
              "type": "array"
            }
          }
        },
        "additionalProperties": false
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "nullable": true
          },
          "correlationId": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}